PROGRAM BAI1;
    VAR n : INTEGER;
        PROCEDURE handle(a: INTEGER);
        BEGIN
            IF a = 1 THEN CALL WriteI(a)
            ELSE IF a - a/2*2 = 0 THEN
                BEGIN
                    CALL WriteI(a);
                    CALL WriteC(',');
                    a := a/2;
                    CALL handle(a);
                END
            ELSE
                BEGIN
                    CALL WriteI(a);
                    CALL WriteC(',');
                    a := a*3 + 1;
                    CALL handle(a);
                END
        END;
    BEGIN
        n := ReadI;
   
        CALL handle(n);
    END.